.<%= @node[:domain] %>:<%= @node[:djbdns][:tinydns_internal_ipaddress] %>:a
<% @node[:djbdns][:ptr_networks].each do |network| %>
.<%= network %>.in-addr.arpa:<%= @node[:djbdns][:tinydns_internal_ipaddress] %>:a
<% end %>

+chef.<%= @node[:domain] %>:<%= @chef_server_ip %>:300
+chefadmin.<%= @node[:domain] %>:<%= @chef_server_ip %>:300
+apt.<%= @node[:domain] %>:<%= @apt_mirror_ip %>:300
+gems.<%= @node[:domain] %>:<%= @gem_mirror_ip %>:300
<% @hosts.each do |host| %>
=<%=host['fqdn']%>:<%= host['ipaddress'] %>:300
<% if aliases = host['dns_aliases'] %>
<% aliases.each do |al| %>
+<%= al %>.<%= @node[:domain] %>:<%= host['ipaddress'] %>:300
<% end %>
<% end %>
<% end %>
